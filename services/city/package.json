{
  "name": "weather-city-service",
  "version": "0.0.1",
  "description": "Weather city micro service",
  "author": "arthot",
  "license": "MIT",
  "main": "lib/server",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "audit": "npm audit",
    "eslint": "eslint --ext .mjs .",
    "format": "./node_modules/.bin/prettier --write '**/*.{mjs,js,json,md,yaml,yml}'",
    "start": "node --es-module-specifier-resolution=node --experimental-json-modules lib/index.mjs",
    "test": "LOGGER_LEVEL=error node_modules/.bin/nyc node_modules/.bin/mocha --exclude 'test/end-to-end/**' 'test/**/**/*.spec.mjs' -R mocha-multi-reporters --reporter-options configFile=./test/mocha-config.json"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "eslintIgnore": [
    "node_modules",
    "reports",
    "mochawesome-report",
    ".nyc_output"
  ],
  "nyc": {
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "./reports"
  },
  "dependencies": {
    "@umnico/api-errors": "^1.0.0",
    "ajv": "^6.12.4",
    "bunyan": "^1.8.14",
    "lodash": "^4.17.20",
    "micro": "^9.3.4",
    "microrouter": "^3.1.3",
    "mongodb": "^3.6.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chance": "^1.1.7",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.3.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^8.1.3",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "sinon": "^9.0.3",
    "supertest": "^4.0.2",
    "test-listen": "^1.1.0"
  }
}
